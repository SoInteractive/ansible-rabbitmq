[Unit]
Description=Rabbitmq Exporter
After=network.target

[Service]
Type=simple
PIDFile=/var/run/rabbitmq_exporter.pid
ExecStart=/opt/rabbitmq_exporter/rabbitmq_exporter {% for flag, flag_value in rabbitmq_exporter_config_flags.iteritems() %}-{{ flag }}={{ flag_value }} {% endfor %}

SyslogIdentifier=rabbitmq_exporter
Restart=always

[Install]
WantedBy=multi-user.target
